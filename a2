#include <pcap.h>
#include <stdio.h>
#include <stdlib.h>
#include <netinet/in.h>
#include <netinet/ip.h>
#include <netinet/tcp.h>
#include <netinet/udp.h>

void packet_handler(u_char *user, const struct pcap_pkthdr *pkthdr, const u_char *packet) {
    const struct ip *ip_header; // IP 헤더
    const struct tcphdr *tcp_header; // TCP 헤더
    int ip_header_length; // IP 헤더 길이

    // IP 헤더로 이동
    ip_header = (struct ip*)(packet);

    // IP 헤더 길이 계산 (IHL 필드는 32비트 워드 단위)
    ip_header_length = ip_header->ip_hl * 4;

    // TCP 패킷인 경우
    if (ip_header->ip_p == IPPROTO_TCP) {
        tcp_header = (struct tcphdr*)((u_char*)ip_header + ip_header_length);

        // SSH 패킷인 경우 (포트 22)
        if (ntohs(tcp_header->th_dport) == 22 || ntohs(tcp_header->th_sport) == 22) {
            printf("SSH Packet Detected\n");
            // 추가적인 SSH 패킷 처리 로직을 추가할 수 있습니다.
        }
        // RDP 패킷인 경우 (포트 3389)
        else if (ntohs(tcp_header->th_dport) == 3389 || ntohs(tcp_header->th_sport) == 3389) {
            printf("RDP Packet Detected\n");
            // 추가적인 RDP 패킷 처리 로직을 추가할 수 있습니다.

            bool is_rdp_packet(const unsigned char* packet, size_t len) {
    // X.224 헤더와 TPKT 헤더 확인
    if (len >= 4 && packet[0] == 0x03 && packet[1] == 0x00 && packet[2] == 0x00 && packet[3] == 0x0e) {
        // RDP PDU 유형 확인
        if (len >= 6 && packet[4] == 0x10 && packet[5] == 0x00) {
            return true; // 연결 요청 PDU
        }
        if (len >= 6 && packet[4] == 0x13 && packet[5] == 0x00) {
            return true; // 연결 승인 PDU
        }
        // 추가적인 PDU 유형 확인 로직 추가
    }
    return false;
}
bool is_rdp_connection_packet(const unsigned char* packet, size_t len) {
    // RDP 연결 설정 정보 교환 패킷 확인
    if (len >= 8 && packet[0] == 0x03 && packet[1] == 0x00 && packet[2] == 0x00 && packet[3] == 0x0e &&
        packet[4] == 0x10 && packet[5] == 0x00 && packet[6] == 0x01 && packet[7] == 0x00) {
        return true;
    }
    return false;
}
bool is_rdp_packet_by_structure(const unsigned char* packet, size_t len) {
    // RDP 패킷 헤더와 페이로드 확인
    if (len >= 6 && packet[0] == 0x03 && packet[1] == 0x00 && packet[2] == 0x00 && packet[3] == 0x0e &&
        packet[4] == 0x10 && packet[5] == 0x00) {
        // 추가적인 RDP 패킷 구조 확인 로직 추가
        return true;
    }
    return false;
}
bool is_rdp_packet_by_processing(const unsigned char* packet, size_t len) {
    // RDP 데이터 처리 과정 확인
    if (len >= 8 && packet[0] == 0x03 && packet[1] == 0x00 && packet[2] == 0x00 && packet[3] == 0x0e &&
        packet[4] == 0x10 && packet[5] == 0x00 && packet[6] == 0x01 && packet[7] == 0x00) {
        // 추가적인 RDP 데이터 처리 과정 확인 로직 추가
        return true;
    }
    return false;
}
bool is_rdp_packet_by_decryption(const unsigned char* packet, size_t len) {
    // RDP 트래픽 복호화 및 분석
    if (len >= 8 && packet[0] == 0x03 && packet[1] == 0x00 && packet[2] == 0x00 && packet[3] == 0x0e &&
        packet[4] == 0x10 && packet[5] == 0x00 && packet[6] == 0x01 && packet[7] == 0x00) {
        // 추가적인 RDP 트래픽 복호화 및 분석 로직 추가
        return true;
    }
    return false;
}

        }
    }
    // UDP 패킷인 경우
    else if (ip_header->ip_p == IPPROTO_UDP) {
        printf("UDP Packet Detected\n");
        // 추가적인 UDP 패킷 처리 로직을 추가할 수 있습니다.
    }
    // 다른 유형의 패킷인 경우
    else {
        printf("Unknown Packet Type\n");
    }
}

int main(int argc, char *argv[]) {
    pcap_t *handle; // pcap 핸들
    char errbuf[PCAP_ERRBUF_SIZE]; // 오류 메시지를 저장할 버퍼

    // pcap 파일을 열고 핸들을 가져옵니다.
    handle = pcap_open_offline(argv[1], errbuf);
    if (handle == NULL) {
        fprintf(stderr, "Error opening pcap file: %s\n", errbuf);
        return 1;
    }

    // 패킷을 처리하는 함수를 등록합니다.
    pcap_loop(handle, 0, packet_handler, NULL);

    // 
